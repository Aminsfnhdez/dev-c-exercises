#include<iostream>
#include <stdio.h> 
#include <stdlib.h>
#include <conio.h>
#include <wchar.h>
#include <locale.h>
#include <string.h>
#include <math.h>
#include <windows.h>

using namespace std;
int *x,n,nn;
main()
{
	cout<<"\t E J E R C I C I O # 5"<<endl<<endl;
	x=new int[n];
	cout<<"Ingrese la cantidad de posiciones para el vector: ";
	cin>>n;
	for(int i=0; i<n; i++)
	{
		cout<<"ingrese el numero # "<<i+1<<" : ";
		cin>>x[i];
	}
	cout<<"Ingrese el numero a buscar en el arreglo ordenado : ";
		cin>>nn;
	for(int i=0; i<n; i++)
	{
		if(nn!=x[i])
		{
			i++;
		}
		else
		{
			cout<<"el numero "<<x[i]<<" Esta en la posicion de memoria"<<&x[i];
		}
	}
}